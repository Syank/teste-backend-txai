// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres:admin@localhost:5432/teste-backend-txai?schema=public"
}

model User {
    id       Int       @id @default(autoincrement())
    name     String
    login    String    @unique
    password String
    role     String
    products Product[]
}

model Product {
    id                Int      @id @default(autoincrement())
    name              String
    price             Float
    registration_date DateTime @default(now())
    quantity          Int
    user              User     @relation(fields: [userId], references: [id])
    userId            Int
}
